<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:transitionName="img" />

            <ImageView
                android:id="@+id/shadow_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/imageView"
                android:contentDescription="TODO"
                android:src="@drawable/bottom_shadow" />

            <ProgressBar
                android:id="@+id/progress_load_photo"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/published_at"
                android:layout_alignEnd="@id/published_at"
                android:layout_alignRight="@id/published_at"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:text="@string/price"
                android:textColor="@android:color/white" />

            <FrameLayout
                android:id="@+id/published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/round_white"
                android:padding="5dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_camera_white_24dp" />

                <TextView
                    android:id="@+id/photoSlides"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/number_photos"
                    android:textColor="#606060" />
            </FrameLayout>

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:layout_below="@+id/imageView"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/textRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rooms"
                android:padding="4dp"
                android:layout_below="@+id/imageView"
                android:layout_toRightOf="@+id/textType"/>
            <TextView
                android:id="@+id/textBathRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bathrooms"
                android:padding="4dp"
                android:layout_below="@+id/imageView"
                android:layout_toRightOf="@+id/textRooms"/>
            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Westlands,next to sarit centre"
                android:padding="4dp"
                android:layout_below="@+id/textType" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>